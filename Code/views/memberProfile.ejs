<head>
    <title>Health & Fitness Club</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link type="text/css" rel="stylesheet" href="css/member.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
</head>

<body>

    <div id="navbar">
        <a id="profileNav" style="color: orange;">Profile</a>
        <a id="dashboardNav" >Dashboard</a>
        <a id="scheduleNav" >Schedule</a>
    </div>

    <div class="mainContent" id="mainContent">
        
        <div class="profileContainer" id="profileContainer">
            <h1>Profile</h1>

            <div style="width:50%; float:left;">
            <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" width="300px">
            </div>
            <div style="width:50%; float:right;">
                <form>
                    <label for="fname">First Name:</label>
                    <input type="text" id="fname" name="fname" value="First Name">
                    <label for="lname">Last Name:</label>
                    <input type="text" id="lname" name="lname" value="Last Name">
                    <label for="age">Age:</label>
                    <input type="text" id="age" name="age" value="age">
                </form>
            </div>
            <div style="margin-top: 360px;">
                <form>
                    <label for="gender">Gender:</label>
                    <select id="gender" name="gender">
                    <option value="au">Male</option>
                    <option value="ca">Female</option>
                    </select>
                </form>
                <form>
                    <label for="country">Country:</label>
                    <select id="country" name="country">
                    <option value="au">Australia</option>
                    <option value="ca">Canada</option>
                    <option value="usa">USA</option>
                    </select>
                </form>
            </div>
            

            <h1>Fitness Goals</h1>
            <h3>Weight Goal:</h3>
            <select name="Weight" id="weightGoal">
                <option value="Gain">Gain</option>
                <option value="Maintain">Maintain</option>
                <option value="Lose">Lose</option>
            </select>
            <h3>Muscle Goal:</h3>
            <select name="Muscle" id="muscleGoal">
                <option value="Gain">Gain</option>
                <option value="Maintain">Maintain</option>
                <option value="Lose">Lose</option>
            </select>
            <h3>Endurance Goal:</h3>
            <select name="Endurance" id="enduranceGoal">
                <option value="Gain">Gain</option>
                <option value="Maintain">Maintain</option>
                <option value="Lose">Lose</option>
            </select>
            <h3>Flexibility Goal:</h3>
            <select name="Flexibility" id="flexibilityGoal">
                <option value="Gain">Gain</option>
                <option value="Maintain">Maintain</option>
                <option value="Lose">Lose</option>
            </select>

            <h1>Health Metrics</h1>
            <form>
                <label for="Weight">Weight:</label>
                <br>
                <input type="text" id="Weight" name="Weight" value="160lbs">
                <br>
                <label for="lname">Height:</label>
                <br>
                <input type="text" id="Height" name="Height" value="180cm">
            </form>
        </div>

    </div>


    <script type="text/javascript" src="js/member.js"></script>
</body>