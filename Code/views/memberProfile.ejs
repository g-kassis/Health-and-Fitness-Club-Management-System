<head>
    <title>Health & Fitness Club</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link type="text/css" rel="stylesheet" href="css/member.css">
    <link type="text/css" rel="stylesheet" href="css/navbar.css">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Black+Ops+One" />
</head>

<body onload="showProfile()">

    <div id="mySidenav" class="sidenav">
  <a  class="closebtn" onclick="closeNav()">&times;</a>
        <a id="profileNav" style="color: orange;">Profile</a>
        <a id="dashboardNav" >Dashboard</a>
        <a id="scheduleNav" >Schedule</a>
        <a id="logOut">Log Out</a>
        <p id="signature">The Health & Fitness Club</p>
    </div>
    

    <div class="mainContent" id="mainContent">
    <div id="profileHolder" class="profileHolder">
        <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776;</span>
            <h1 style="margin-top: 5%;" id="sectionTitle">Profile</h1>

            <div style="width:50%; float:left;">
            <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" width="300px">
            </div>
            <div style="width:50%; float:right;">
                <form>
                    <label for="fname">First Name:</label>
                    <input type="text" id="fname" value="First Name">
                    <label for="lname">Last Name:</label>
                    <input type="text" id="lname" value="Last Name">
                    <label for="age">Age:</label>
                    <input type="text" id="age" value="Not Set">
                </form>
            </div>
            <div style="margin-top: 360px;">
                <form>
                    <label for="gender">Gender:</label>
                    <select id="gender">
                    <option value="null" selected disabled hidden>Not Set</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    </select>
                </form>
            </div>
            

            <h1>Fitness Goals</h1>
                <label for="Weight">Weight Goal: (lbs)</label>
                <br>
                <input type="text" id="weightGoal" value="Not Set">
                <br>
                <label for="Muscle">Muscle Goal: (lbs)</label>
                <br>
                <input type="text" id="muscleGoal" value="Not Set">
                <br>
                <label for="Endurance">Endurance Goal: (km/h)</label>
                <br>
                <input type="text" id="enduranceGoal" value="Not Set">

            <h1>Health Metrics</h1>
            <form>
                <label for="weightMetric">Weight: (lbs)</label>
                <br>
                <input type="text" id="weightMetric" value="Not Set">
                <br>
                <label for="heightMetric">Height: (cm)</label>
                <br>
                <input type="text" id="heightMetric" value="Not Set">
            </form>

            <center><button id="saveProfile">Save</button></center>
    </div>
    </div>


    <script type="text/javascript" src="js/member.js"></script>
</body>